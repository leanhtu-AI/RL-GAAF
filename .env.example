# Educational RLHF Real-time System Configuration

# API Configuration
GEMINI_API_KEY=Your_api_key

# System Configuration
FRAMEWORK_TYPE=langchain
TARGET_LEVEL=intermediate

RLHF_DEV_DISABLE_SAFETY=1

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# RLHF Parameters
# POLICY_UPDATE_INTERVAL=300
PREFERENCE_BATCH_SIZE=3
MAX_OUTPUT_TOKENS=4096

# Mentor Evaluation Weights
CONCEPTUAL_ACCURACY_WEIGHT=0.20
PEDAGOGICAL_FLOW_WEIGHT=0.20
PRACTICAL_RELEVANCE_WEIGHT=0.20
CLARITY_PRECISION_WEIGHT=0.15
ENGAGEMENT_MOTIVATION_WEIGHT=0.15
DEPTH_INSIGHTS_WEIGHT=0.10

# # Safety Settings
# ENABLE_SAFETY_FILTERS=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

ENABLE_COUNT_TRIGGER=true
